@model DbSchool.School

@{
    ViewData["Title"] = "Create";
}

<h1>Додавання школи до типу @ViewBag.SchoolTypeName</h1>

<h4>School</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SchoolNumber" class="control-label"></label>
                <input asp-for="SchoolNumber" class="form-control" />
                <span asp-validation-for="SchoolNumber" class="text-danger"></span>
            </div>

            <input type="hidden" value="@ViewBag.SchoolTypeId" name="SchoolTypeId" />

            <div class="form-group">
                <label asp-for="Info" class="control-label"></label>
                <input asp-for="Info" class="form-control" />
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
