@model DbSchool.SchoolType

@{
    ViewData["Title"] = "Редагування";
}

<h1>Редагувати</h1>

<h4>Тип школи</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SchoolTypeId" />
            <div class="form-group">
                <label asp-for="SchoolTypeName" class="control-label"></label>
                <input asp-for="SchoolTypeName" class="form-control" />
                <span asp-validation-for="SchoolTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти зміни" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутись до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
